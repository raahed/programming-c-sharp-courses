<Window x:Class="Prog3Practis3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog3Practis3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight" MinHeight="150" MinWidth="250">
    <Grid>
        <Button x:Name="button" Content="Reset" HorizontalAlignment="Right" Margin="20,20" VerticalAlignment="Bottom" Click="ResetSlider"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="106,31,0,0" VerticalAlignment="Top" Width="120" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="true" Value="50" ValueChanged="ApplySliderChange"/>
        <TextBlock x:Name="text" HorizontalAlignment="Left" Margin="31,32,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top"/>
    </Grid>
</Window>
